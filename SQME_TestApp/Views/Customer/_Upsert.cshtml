@model Customer

<div class="modal fade" id="customerModal-@Model.ID" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="customerModalLabel">@(Model.ID == 0 ? "Create Customer" : "Edit Customer")</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-start" id="customerModalBody">
                <form asp-action="Upsert" asp-controller="Customer" method="post">
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group pt-2">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-2">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-2">
                        <label asp-for="MobileNumber"></label>
                        <input asp-for="MobileNumber" class="form-control" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-2">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-2">
                        <input asp-for="IsActive" class="form-check-input text-start" />
                        <label asp-for="IsActive"></label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
                @if (Model.ID != 0)
                {
                    <div class="modal-footer">
                        <form asp-action="Delete" asp-controller="Customer" method="post">
                            <input type="hidden" asp-for="ID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
