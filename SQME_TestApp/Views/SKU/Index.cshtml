@model List<SKU>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">SKUs</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#skuModal-0" data-url="@Url.Action("Upsert")">
                        Create
                    </button>
                    <partial name="_Upsert" model="new SKU()" />
                </div>
            </div>

            <table class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Code
                        </th>
                        <th>
                            Unit Price
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(c => c.Name))
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.Code
                            </td>
                            <td>
                                @obj.UnitPrice
                            </td>
                            <td>
                                @obj.IsActive
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <button type="button" class="btn btn-primary mx-2" data-bs-toggle="modal" data-bs-target="#skuModal-@obj.ID" data-url="@Url.Action($"Upsert/{obj.ID}")">
                                        Edit
                                    </button>
                                    @await Html.PartialAsync("_Upsert", obj)
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
